hostname-typeofoutput

#Creating files to play with

#Create a list from a file containing names
mylist = open("10names.txt").readlines()

#Strip newline from list to newlist
strippedname = []
for i in mylist:
	strippedname.append(i.strip())

#Create a list of filenames
filestomake=[]
for i in strippedname:
	filestomake.append(i + "showversion")
	filestomake.append(i + "showrun")
	filestomake.append(i + "showcdpneighboor")

#create files with name/contents of list
for i in filestomake:
     file = open(i,'w')
     file.write(i)
     file.close()

////////////////////

List all files in directory ending in %command%
import glob
almosthost=glob.glob("/root/git/NCMJoiner/samplefiles/*showrun")
hostlist=[]
for i in almosthost:
	hostlist.append(i.rstrip("showrun"))
for host in hostlist:
	hostfiles=[]
	hostfiles.append(host+"showversion")
	hostfiles.append(host+"showrun")
	hostfiles.append(host+"showcdpneighboor")
	with open(host + "results.txt",'w') as outfile:
		for fname in hostfiles:
			with open(fname) as infile:
			outfile.write(infile.read())


	

